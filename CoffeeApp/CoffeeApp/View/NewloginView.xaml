<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeApp.View.NewloginView" Title="SBI">
    <ContentPage.Content>
        <StackLayout Margin="20" >
            <Entry Placeholder="Enter Id" PlaceholderColor="Chocolate" 
                   HorizontalOptions="Center" Text="{Binding UserId}" />
            <Entry Placeholder="Enter Password" PlaceholderColor="Chocolate"
                   HorizontalOptions="Center" Text="{Binding Passward}" 
                   IsPassword="True"/>

            <StackLayout Margin="20" BackgroundColor="LightGreen">
                <Button Text="Submit" TextColor="Pink" FontSize="Default"
                    HorizontalOptions="FillAndExpand" 
                    Command="{Binding mybutton}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>